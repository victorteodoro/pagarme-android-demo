<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="me.pagar.demoandroidpagarmempos.MainActivity"
    >

  <TextView
      android:id="@id/card_pan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/holder_name"
      android:layout_below="@+id/holder_name"
      android:text="Final 1111"
      style="@style/AppTheme.PAN"
      />

  <TextView
      android:id="@+id/transaction_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/transaction_amount"
      android:text="16/12/17"
      style="@style/AppTheme.Date"
      />
  <TextView
      android:id="@+id/transaction_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:text="R$ 10,00"
      style="@style/AppTheme.Amount"
      />
  <TextView
      android:id="@+id/holder_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@+id/card_icon"
      android:text="Holder name"
      style="@style/AppTheme.HolderName"
      />
  <ImageButton
      android:id="@+id/card_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/card_pan"
      android:layout_alignParentStart="true"
      android:src="@drawable/ic_credit_card_black_24dp"
      />

</RelativeLayout>
