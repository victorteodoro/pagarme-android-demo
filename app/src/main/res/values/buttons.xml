<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme.ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
    <item name="android:backgroundTint">@color/light_green</item>
    <item name="colorControlHighlight">@color/accent_green</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/exo_2_light</item>
    <item name="android:textSize">25sp</item>
    <item name="android:layout_marginLeft">40dp</item>
    <item name="android:layout_marginRight">40dp</item>
  </style>

  <style name="AppTheme.CardBtnPrimary">
    <item name="cardBackgroundColor">@color/light_green</item>
    <item name="cardCornerRadius">20dp</item>
    <item name="cardElevation">10dp</item>
    <item name="android:layout_marginLeft">40dp</item>
    <item name="android:layout_marginRight">40dp</item>
  </style>

  <style name="AppTheme.NumberButton" parent="AppTheme.ButtonPrimary">
    <item name="android:backgroundTint">@color/dark_green_stone</item>
    <item name="android:layout_width">120dp</item>
    <item name="android:layout_height">50dp</item>
  </style>
</resources>